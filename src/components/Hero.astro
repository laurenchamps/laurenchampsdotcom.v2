---
import { Icon } from 'astro-icon/components'

const { src = '/lc-headshot-blob.jpg' } = Astro.props
---

<section class="hero">
  <div class="container">
    <div class="grid grid-cols-3 items-center gap-12">
      <div class="col-span-2 flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-4xl md:text-left lg:text-6xl">
          <slot>Let's get your business operations in order, so you can get back to what you do best</slot>
        </h1>
        <div class="flex flex-col gap-6 min-[500px]:flex-row">
          <a class="button has-icon" href="/contact">
            Services
            <Icon name="arrow-right" />
          </a>
          <a class="button has-icon" href="/contact">
            Contact me
            <Icon name="arrow-right" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .text-gradient {
    background: linear-gradient(315deg, var(--primary-400) 25%, var(--primary-500));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.darkmode .text-gradient) {
    background: linear-gradient(315deg, var(--secondary-100) 25%, var(--secondary-200));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
