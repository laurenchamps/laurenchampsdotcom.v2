---
import { Icon } from 'astro-icon/components'
---

<div class="masthead bg-img">
  <div class="masthead__content container">
    <h1 class="masthead__heading">
      Let's get your business operations in order so you can get back to what you do best.
    </h1>
    <div class="masthead__btngrp btngrp">
      <a class="button has-icon" href="#">
        Services
        <Icon name="arrow-right" />
      </a>
      <a class="button has-icon" href="/contact">
        Contact me
        <Icon name="arrow-right" />
      </a>
    </div>
  </div>

  <style>
    .masthead {
      height: calc(100vh - 10rem);
    }

    .masthead__content {
      display: grid;
      grid-template-rows: 10% minmax(min-content, 16rem) 1fr;
      gap: 2.5em 1.5vi;
      height: 100%;
    }

    .masthead__heading {
      grid-row: 2/3;
    }

    .masthead__btngrp {
      grid-row: 3/-1;
    }

    /* .masthead__heading {
      grid-column: 1/-1;
      align-self: end;
      margin-block-start: var(--space-m-xl);
    } */

    /* .masthead__subhead {
      grid-row: 2;
      grid-column: 1/-1;
    } */

    .bg-img {
      position: relative;
      background: url(laptop-and-plant.jpeg) no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      isolation: isolate;
    }

    .bg-img::after {
      position: absolute;
      opacity: var(--bg-opacity);
      z-index: -1;
      inset: 0;
      background-color: var(--bg-color);
      content: '';
    }
  </style>
</div>
