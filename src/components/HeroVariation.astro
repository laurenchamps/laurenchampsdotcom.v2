---
import { Icon } from 'astro-icon/components'

const { src = '/lc-headshot-blob.jpg' } = Astro.props
---

<section class="about-section">
  <div class="container">
    <div class="switcher">
      <div class="flow">
        <slot />
        <a class="button has-icon align-right" href="/about"
          >Read on
          <Icon name="arrow-right" />
        </a>
      </div>
      <div class="img-container">
        <img class="img-headshot image" src="/lauren-sitting-at-desk-3.jpg" alt="" decoding="async" />
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .img-container {
    justify-items: center;
  }

  .switcher {
    --gutter: var(--space-m);
  }

  .about-section {
    background-color: var(--color-mid);
    padding: var(--space-4xl) 0;
    --gutter: var(--space-2xl);
  }

  .text-gradient {
    background: linear-gradient(315deg, var(--primary-400) 25%, var(--primary-500));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.darkmode .text-gradient) {
    background: linear-gradient(315deg, var(--secondary-100) 25%, var(--secondary-200));
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
