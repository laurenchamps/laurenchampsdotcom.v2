---
import '@astrojs/tailwind/base.css'
import '../assets/scss/globals.scss'
import SiteMeta from '../components/SiteMeta.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

const {
  title = 'Lauren Champs',
  description = 'I help business owners systemise their processes so they can spend less time on admin and more time on what really matters.',
  url = Astro.site,
  image = 'hero-illustration.png',
  author = 'Lauren Champs',
} = Astro.props
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon-l.svg" />

    <SiteMeta title={title} description={description.substring(0, 100)} url={url} image={image} author={author} />
  </head>
  <body>
    <Header />
    <main id="main-content" transition:animate="fade">
      <slot />
    </main>
    <Footer />
    <style lang="scss" is:global>
      // theme settings
      :root {
        --radius-small: 3px;
        --radius-large: 6px;
        --gap-default: 2rem;
        --font-measure: 70ch;
        --font-family-default: 'Lexend', sans-serif;
        // --font-family-special: 'Hedvig Letters Serif', sans-serif;
        --font-family-special: 'Satoshi', sans-serif;
        // light theme
        --font-color: var(--neutral-900);
        --action-color: var(--accent-primary);
        --action-color-state: var(--accent-primary);
        --bright-color: var(--accent-primary);
        --background: var(--light-secondary);
        --primary-background: var(--light-primary);
        --neutral-background: var(--light-secondary);
      }

      // dark color scheme overrides
      .darkmode {
        --font-color: var(--neutral-100);
        --action-color: var(--light-primary);
        --action-color-state: var(--light-primary);
        --background: var(--dark-primary);
        --primary-background: var(--dark-primary);
        --neutral-background: var(--light-secondary);
        --ribbon-color: var(--light-primary);
        --logo-name: var(--light-secondary);
        --logo-loop: var(--dark-primary);
        --logo-badge: var(--light-primary);
      }

      .feature svg path {
        fill: var(--light-primary);
      }

      svg .name {
        fill: var(--logo-name);
      }

      svg .loop {
        fill: var(--logo-loop);
      }

      svg .badge {
        fill: var(--logo-badge);
      }

      // sticky footer on low content pages
      html,
      body {
        height: 100%;
      }

      body {
        display: flex;
        flex-direction: column;
        background-color: var(--background);
        overflow-x: hidden;
        color: var(--font-color);

        main {
          flex: 1 0 auto;
        }

        footer {
          flex-shrink: 0;
        }
      }

      pre {
        border: 2px solid var(--action-color);
        border-radius: 0.35rem;
        padding: 1rem;
      }

      body .pagination a {
        &:hover,
        &:focus-visible {
          background-color: var(--action-color-state);

          svg path {
            stroke: white;
          }
        }
      }

      .sr-only {
        position: absolute;
        margin: -1px;
        padding: 0;
        width: 1px;
        height: 1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        border-width: 0;
        white-space: nowrap;
      }
    </style>
  </body>
</html>
