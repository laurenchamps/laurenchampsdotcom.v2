---
import DefaultLayout from '../layouts/DefaultLayout.astro'
---

<DefaultLayout title="Request a Quote">
  <section class="container">
    <hr class="ribbon" />
    <h1 class="subhead mb-6">Contact</h1>
    <div class="flow">
      <p class="heading-text">Have a question or want to work together?</p>
      <p>Fill out the form here and I'll be in touch.</p>
      <small
        >(If you don't see the form below, refresh the page or <a href="https://tally.so/r/3ygMk6" target="_blank"
          >fill it out here</a
        >.)</small
      >
    </div>
  </section>
  <section class="my-12">
    <div class="container">
      <iframe
        data-tally-src="https://tally.so/embed/3ygMk6?alignLeft=1&hideTitle=1&dynamicHeight=1"
        loading="lazy"
        width="100%"
        height="657"
        frameborder="0"
        marginheight="0"
        marginwidth="0"
        title="Contact form
      "></iframe>
      <script>
        var d = document,
          w = 'https://tally.so/widgets/embed.js',
          v = function () {
            'undefined' != typeof Tally
              ? Tally.loadEmbeds()
              : d.querySelectorAll('iframe[data-tally-src]:not([src])').forEach(function (e) {
                  e.src = e.dataset.tallySrc
                })
          }
        if ('undefined' != typeof Tally) v()
        else if (d.querySelector('script[src="' + w + '"]') == null) {
          var s = d.createElement('script')
          ;(s.src = w), (s.onload = v), (s.onerror = v), d.body.appendChild(s)
        }
      </script>
    </div>
  </section>
  <section class="flow container">
    <p class="mb-12">
      Not a fan of forms? No worries, <a href="mailto:hello@laurenchamps.com">drop me an email</a> instead.
    </p>
  </section>
</DefaultLayout>

